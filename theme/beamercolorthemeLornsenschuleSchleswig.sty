\ifbeamer@dark%

  \setbeamercolor{structure}{fg=white}%
  \setbeamercolor{normal text}{fg=white}%
  \setbeamercolor{frametitle}{fg=white}%
  \setbeamercolor{frame number in foot}{fg=lsblue}%

  \setbeamercolor{frame number in head}{fg=white}%

\else%

  \setbeamercolor{structure}{fg=lsblue}%
  \setbeamercolor{normal text}{fg=lsblue}%
  \setbeamercolor{frametitle}{fg=lsblue}%

  \setbeamercolor{frame number in foot}{fg=white}%

  \ifbeamer@darktitle%
      \setbeamercolor{title}{fg=white}%
      \setbeamercolor{subtitle}{fg=white}%
  \else
      \setbeamercolor{subtitle}{fg=lsred}%
  \fi

\fi


% =======================================================================
% alert color
\setbeamercolor{alerted text}{fg=lsred}
% =======================================================================

% =======================================================================
% blocks
\setbeamercolor{block title}{use=structure,fg=white,bg=lsblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=lsred}
\setbeamercolor{block title example}{use=example text,fg=white,bg=lsblue}

\setbeamercolor{block body}        {fg=lsblue,use=block title,bg=lsblue10}
\setbeamercolor{block body alerted}{fg=lsblue,use=block title alerted,bg=lsred10}
\setbeamercolor{block body example}{fg=lsblue,use=block title example,bg=lsblue10}
